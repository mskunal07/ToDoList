<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= ListTitle %></h1>
    </div>

    <div class="box" >
        <% for(let i = 0;i<itemsToAdd.length;i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= itemsToAdd[i] %></p>
            </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newitem" placeholder="Add a item" autocomplete="off">
            <button type="submit" name="submit" value="<%= ListTitle %>">+</button>
        </form>
    </div>

<%- include("footer") -%>
